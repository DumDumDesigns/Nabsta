<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nabsta="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studioLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/primary_dark_material_dark">
<ListView
    android:id="@+id/list_view_tracks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/songPlayLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">
        <com.spazomatic.nabsta.controls.SongPlayButton
            android:id="@+id/songPlayBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/master_play_btn" />

    </LinearLayout>

</LinearLayout>
