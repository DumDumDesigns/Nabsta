<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spazomatic.nabsta.fragment.RecordFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/audio_record_start"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/audio_record_stop"
        android:layout_alignTop="@+id/audio_record_start"
        android:layout_toRightOf="@+id/audio_record_start"
        android:layout_toEndOf="@+id/audio_record_start"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

</FrameLayout>
